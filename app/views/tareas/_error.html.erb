<% if @tarea.errors.any? %>
  <% @tarea.errors.each do  %>
    <div class="notification is-danger is-light">
      <h1 class="title is-5"> Something went wrong:</h1>
      <ul>
        <% @tarea.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

