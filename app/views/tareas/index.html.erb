<section class="section">

<h1 class="title">Todo List</h1>

<table class="table">
  <tbody>
    
      <% @tareas.each do |tarea| %>
    <tr>
      <% if tarea.completed %>
      <td><p class="completed"><%= tarea.descr %></p>
      <td><p>completed</p></td>
      </td>
      
      <% else %>
      <td><p><%= tarea.descr %></p></td>
      <td><p>to do</p></td>
      <% end %>
      
      <td>
        <i class="fa-solid fa-eye">
          <%= link_to "Show", tarea %>
        </i>
      </td>
      <td>
        <i class="fa-solid fa-pen">
          <%= link_to "Edit", edit_tarea_path(tarea) %>
        </i>
      </td>
      <td>
        <i class="fa-solid fa-trash-can">
          <%= link_to "Delete", tarea, method: :delete, data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
        </i>
      </td>
    </tr>
   
  <% end %>
  </tbody>
</table>

<div>
  <button class="button">
    <%= link_to "New task", new_tarea_path %>
  </button>
</div>

</section>